@{
    ViewBag.Title = "Välkommen!";
}

<div class="row" style="margin-top: 100px">
    @foreach (var error in ViewBag.ErrorMessages)
    {
        <h4>@error</h4>
    }
    <div class="small-6 columns small-centered text-center">
        Välkommen till
        <div>
            <div style="position: absolute; right: 0px; top: -20px; transform: rotate(-30deg); -webkit-transform: rotate(-30deg)">
                <i class="fi-dollar-bill" style="font-size: 70px"></i>
            </div>  
            <div style="position: absolute; right: -5px; top: 0px; transform: rotate(-10deg); -webkit-transform: rotate(-10deg)">
                <i class="fi-dollar-bill" style="font-size: 70px"></i>
            </div>
            <h1 style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; font-size: 70px">Bankomaten
            </h1>
        </div>
    </div>
</div>
<div class="row" style="padding-top: 200px; margin-bottom: 200px">
    <div class="small-12 columns text-center">
        <a href="@Url.Action("Login", "Account")" style="margin-top: 300px; border: solid 2px; border-radius: 50%; padding: 190px 200px 190px 200px; color: black; position: relative; top: 0px">
            <i class="fi-paw" style="font-size: 250px; position: absolute; left: 115px; top: 15px"></i>
        </a>
    </div>
</div>
<div class="row">
    <div class="small-12 columns text-center" style="padding-top: 20px">
        <p class="button">
            SKANNA TASSEN<br />
            ELLER MATA IN KORTET
        </p>
    </div>
</div>
