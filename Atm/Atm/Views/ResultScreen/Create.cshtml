@model Atm.Models.Money

@{
    ViewBag.Title = "Result";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row" style="margin-top: 50px">
        <div class="small-6 columns small-centered text-center">

            <div>
                <div style="position: absolute; right: 0px; top: -20px; transform: rotate(-30deg); -webkit-transform: rotate(-30deg)">
                    <i class="fi-dollar-bill" style="font-size: 70px"></i>
                </div>
                <div style="position: absolute; right: -5px; top: 0px; transform: rotate(-10deg); -webkit-transform: rotate(-10deg)">
                    <i class="fi-dollar-bill" style="font-size: 70px"></i>
                </div>
                <h1 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; font-size: 70px">
                    Bankomaten
                </h1>
            </div>
        </div>
    </div>
    
   <div style="margin-left: auto; margin-right: auto; width: 6em">Tack för ditt uttag!</div>
        
            <div class="form-horizontal" style="margin-left: auto; margin-right: auto; width: 6em">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    Femhundralappar: @ViewBag.Fivehundreds
                    <div class="col-md-10">
                    </div>
                </div>

                <div class="form-group">
                    Hundralappar: @ViewBag.Hundreds
                    <div class="col-md-10">
                        @ViewBag.Print
                        @ViewBag.Mail
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }

            @*<div>
                @Html.ActionLink("Back to List", "Index")
            </div>*@

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
