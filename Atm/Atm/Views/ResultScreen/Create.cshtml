@model Atm.Models.Money

@{
    ViewBag.Title = "Result";
}

@using (Html.BeginForm("LogOff", "Account"))

{
    @Html.AntiForgeryToken()

    <div class="row" style="margin-top: 50px">
        <div class="small-6 columns small-centered text-center">

            <div>
                <div style="position: absolute; right: 0px; top: -20px; transform: rotate(-30deg); -webkit-transform: rotate(-30deg)">
                    <i class="fi-dollar-bill" style="font-size: 70px"></i>
                </div>
                <div style="position: absolute; right: -5px; top: 0px; transform: rotate(-10deg); -webkit-transform: rotate(-10deg)">
                    <i class="fi-dollar-bill" style="font-size: 70px"></i>
                </div>
                <h1 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; font-size: 70px">
                    Bankomaten
                </h1>
            </div>
        </div>
    </div>

    <div style="margin-left: auto; margin-right: auto; width: 18em; padding-left: 4em">
        <p style="font-size:20px">Tack för ditt uttag!</p>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal" style="margin-left: auto; margin-right: auto; width: 6em" />
    <div class="form-group" style="margin-left: auto; margin-right: auto;  width: 6em">
        Femhundralappar: @ViewBag.Fivehundreds
        <div class="col-md-10">
        </div>
    </div>
    
        <div class="form-group">
            Hundralappar: @ViewBag.Hundreds
            <div class="col-md-10">
                @ViewBag.Print
                @ViewBag.Mail
            </div>
        </div>
        <div class="row">
            <div class="small-12 columns text-center" style="padding-top: 20px">
                <input type="submit" value="OK" class="button">

            </div>
        </div>

}

